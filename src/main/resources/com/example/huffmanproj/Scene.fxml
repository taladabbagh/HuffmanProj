<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" spacing="10" style="-fx-font-size: 18px;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.huffmanproj.SceneController">
    <HBox spacing="10">
        <Label text="Input file:" />
        <TextField id="inputFileTF" fx:id="inputFileTF" prefWidth="400" />
        <Button id="inputBtn" fx:id="inputBtn" onAction="#browseForInputFile" text="Browse" />

    </HBox>
    <HBox spacing="10">
        <Label text="Output file:" />
        <TextField id="outputFileTF" fx:id="outputFileTF" prefWidth="400" />
        <Button id="outputBtn" fx:id="outputBtn" onAction="#browseForOutputFile" text="Browse" />
        <!--&lt;!&ndash;    -->
    </HBox>
    <HBox alignment="center" spacing="10">
        <Button id="encodeBtn" fx:id="encodeBtn" onAction="#encode" text="Encode" />

        <Button id="decodeBtn" fx:id="decodeBtn" onAction="#decode" text="Decode" />

    </HBox>
</VBox>
